<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/tools"
    android:id="@+id/content_map"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="io.github.maniknarang.riderr.MapActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
        <fragment
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:name="io.github.maniknarang.riderr.MapFragment"
            android:id="@+id/map_fragment"/>

        <android.support.v7.widget.CardView
            android:layout_width="wrap_content"
            android:id="@+id/card_search_view"
            android:layout_height="wrap_content"
            android:background="#FFF"
            android:alpha="0.9"
            android:layout_gravity="top|right"
            card_view:cardCornerRadius="16dp"
            android:layout_margin="16dp"
            android:elevation="0dp">
            <com.varunest.sparkbutton.SparkButton
                android:id="@+id/spark_search"
                android:layout_width="48dp"
                android:layout_height="48dp"
                app:sparkbutton_activeImage="@drawable/ic_gesture_black_24dp"
                app:sparkbutton_iconSize="48dp"
                app:sparkbutton_primaryColor="@color/colorPrimary"
                app:sparkbutton_secondaryColor="@color/colorPrimaryDark"
                app:sparkbutton_animationSpeed="1.5"/>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="wrap_content"
            android:id="@+id/card_drawer_view"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            card_view:cardCornerRadius="16dp"
            android:layout_margin="16dp"
            android:elevation="16dp">
        <com.varunest.sparkbutton.SparkButton
            android:id="@+id/spark_draw"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="#37474F"
            app:sparkbutton_activeImage="@drawable/ic_line_style_black_24dp"
            app:sparkbutton_iconSize="48dp"
            app:sparkbutton_primaryColor="@color/colorPrimary"
            app:sparkbutton_secondaryColor="@color/colorPrimaryDark"
            app:sparkbutton_animationSpeed="1.5"/>
        </android.support.v7.widget.CardView>
        <com.varunest.sparkbutton.SparkButton
            android:id="@+id/spark_loc"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginBottom="48dp"
            android:layout_marginRight="16dp"
            android:layout_gravity="bottom|right"
            android:alpha="0.8"
            android:background="@drawable/round_button"
            app:sparkbutton_activeImage="@drawable/ic_brightness_1_black_24dp"
            app:sparkbutton_iconSize="15dp"
            app:sparkbutton_primaryColor="@color/colorPrimary"
            app:sparkbutton_secondaryColor="@color/colorPrimaryDark"
            app:sparkbutton_animationSpeed="1.5"/>
    </FrameLayout>
</FrameLayout>

</RelativeLayout>
