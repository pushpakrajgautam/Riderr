<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/tools"
    android:id="@+id/content_map"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="io.github.maniknarang.riderr.MapActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.sothree.slidinguppanel.SlidingUpPanelLayout
            xmlns:sothree="http://schemas.android.com/apk/res-auto"
            android:id="@+id/sliding_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="bottom"
            sothree:umanoPanelHeight="56dp"
            sothree:umanoShadowHeight="0dp"
            sothree:umanoAnchorPoint="0.4"
            sothree:umanoFadeColor="@android:color/transparent"
            sothree:umanoDragView="@+id/panel_text"
            android:clickable="true">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/frame_layout">
        <fragment
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:name="io.github.maniknarang.riderr.MapFragment"
            android:id="@+id/map_fragment">
        </fragment>

        <com.varunest.sparkbutton.SparkButton
            android:id="@+id/spark_loc"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginBottom="16dp"
            android:layout_marginRight="16dp"
            android:layout_gravity="bottom|right"
            android:alpha="0.8"
            android:background="@drawable/round_button"
            app:sparkbutton_activeImage="@drawable/ic_brightness_1_black_24dp"
            app:sparkbutton_iconSize="15dp"
            app:sparkbutton_primaryColor="@color/colorPrimary"
            app:sparkbutton_secondaryColor="@color/colorPrimaryDark"
            app:sparkbutton_animationSpeed="1.5"/>
    </FrameLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/linear_slide"
            android:clickable="true"
            android:orientation="vertical">
        <TextView
            android:id="@+id/panel_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:gravity="center|top"
            android:text="Filter Subway Stations"
            android:textSize="14sp"
            android:textColor="@color/colorPrimary"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/colorPrimaryLight" />
        </LinearLayout>
</com.sothree.slidinguppanel.SlidingUpPanelLayout>
        <android.support.v7.widget.CardView
            android:layout_width="wrap_content"
            android:id="@+id/card_search_view"
            android:layout_height="wrap_content"
            android:background="#FFF"
            android:alpha="0.9"
            android:layout_gravity="top|right"
            card_view:cardCornerRadius="16dp"
            android:layout_margin="16dp"
            android:elevation="0dp">
            <com.varunest.sparkbutton.SparkButton
                android:id="@+id/spark_search"
                android:layout_width="48dp"
                android:layout_height="48dp"
                app:sparkbutton_activeImage="@drawable/ic_gesture_black_24dp"
                app:sparkbutton_iconSize="48dp"
                app:sparkbutton_primaryColor="@color/colorPrimary"
                app:sparkbutton_secondaryColor="@color/colorPrimaryDark"
                app:sparkbutton_animationSpeed="1.5"/>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="wrap_content"
            android:id="@+id/card_drawer_view"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            card_view:cardCornerRadius="16dp"
            android:layout_margin="16dp"
            android:elevation="16dp">
            <com.varunest.sparkbutton.SparkButton
                android:id="@+id/spark_draw"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="#37474F"
                app:sparkbutton_activeImage="@drawable/ic_line_style_black_24dp"
                app:sparkbutton_iconSize="48dp"
                app:sparkbutton_primaryColor="@color/colorPrimary"
                app:sparkbutton_secondaryColor="@color/colorPrimaryDark"
                app:sparkbutton_animationSpeed="1.5"/>
        </android.support.v7.widget.CardView>
    </FrameLayout>
</RelativeLayout>
