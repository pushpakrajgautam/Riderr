<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/tools"
    android:id="@+id/content_map"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="io.github.maniknarang.riderr.MapActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/frag_container">

        <com.sothree.slidinguppanel.SlidingUpPanelLayout
            xmlns:sothree="http://schemas.android.com/apk/res-auto"
            android:id="@+id/sliding_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="bottom"
            sothree:umanoPanelHeight="56dp"
            sothree:umanoShadowHeight="0dp"
            sothree:umanoAnchorPoint="0.4"
            sothree:umanoFadeColor="@android:color/transparent"
            sothree:umanoDragView="@+id/panel_text"
            sothree:umanoScrollableView="@+id/the_list"
            android:clickable="true">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/frame_layout">
        <fragment
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:name="io.github.maniknarang.riderr.MapFragment"
            android:id="@+id/map_fragment">
        </fragment>

        <com.varunest.sparkbutton.SparkButton
            android:id="@+id/spark_loc"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginBottom="16dp"
            android:layout_marginRight="16dp"
            android:layout_gravity="bottom|right"
            android:alpha="0.8"
            android:background="@drawable/round_button"
            app:sparkbutton_activeImage="@drawable/ic_brightness_1_black_24dp"
            app:sparkbutton_iconSize="15dp"
            app:sparkbutton_primaryColor="@color/colorPrimary"
            app:sparkbutton_secondaryColor="@color/colorPrimaryDark"
            app:sparkbutton_animationSpeed="1.5"/>
    </FrameLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/linear_slide"
            android:clickable="true"
            android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center|top"
            android:orientation="horizontal"
            android:id="@+id/panel_text"
            android:background="#37474F"
            android:elevation="1dp">

                <com.varunest.sparkbutton.SparkButton
                    android:id="@+id/spark_train"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:background="#FFF"
                    app:sparkbutton_activeImage="@drawable/ic_train"
                    app:sparkbutton_iconSize="24dp"
                    app:sparkbutton_primaryColor="@color/colorPrimary"
                    app:sparkbutton_secondaryColor="@color/colorPrimaryDark"
                    app:sparkbutton_animationSpeed="1.5"/>

                <com.varunest.sparkbutton.SparkButton
                    android:id="@+id/spark_bus"
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:background="#FFF"
                    app:sparkbutton_activeImage="@drawable/ic_bus"
                    app:sparkbutton_iconSize="24dp"
                    app:sparkbutton_primaryColor="@color/colorPrimary"
                    app:sparkbutton_secondaryColor="@color/colorPrimaryDark"
                    app:sparkbutton_animationSpeed="1.5"/>


                <com.varunest.sparkbutton.SparkButton
                    android:id="@+id/spark_cycle"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:background="#FFF"
                    app:sparkbutton_activeImage="@drawable/ic_biker"
                    app:sparkbutton_iconSize="24dp"
                    app:sparkbutton_primaryColor="@color/colorPrimary"
                    app:sparkbutton_secondaryColor="@color/colorPrimaryDark"
                    app:sparkbutton_animationSpeed="1.5"/>

                <com.varunest.sparkbutton.SparkButton
                    android:id="@+id/spark_parking"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:background="#FFF"
                    app:sparkbutton_activeImage="@drawable/ic_parking"
                    app:sparkbutton_iconSize="24dp"
                    app:sparkbutton_primaryColor="@color/colorPrimary"
                    app:sparkbutton_secondaryColor="@color/colorPrimaryDark"
                    app:sparkbutton_animationSpeed="1.5"/>

        </LinearLayout>

            <android.support.v4.widget.SwipeRefreshLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/swipeContainer"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

            <android.support.v7.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/the_list">
            </android.support.v7.widget.RecyclerView>
            </android.support.v4.widget.SwipeRefreshLayout>
        </LinearLayout>
</com.sothree.slidinguppanel.SlidingUpPanelLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:id="@+id/card_button_view"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="top"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/rounded_corner">
            <com.varunest.sparkbutton.SparkButton
                android:id="@+id/spark_draw"
                android:layout_marginRight="10dp"
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:sparkbutton_activeImage="@drawable/ic_line_style_black_24dp"
                app:sparkbutton_iconSize="40dp"
                app:sparkbutton_primaryColor="@color/colorPrimary"
                app:sparkbutton_secondaryColor="@color/colorPrimaryDark"
                app:sparkbutton_animationSpeed="1.5"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:textSize="12sp"
                    android:gravity="center_vertical"
                    android:id="@+id/search_bar"
                    android:text="Where Do You Want To Go?"/>
            </LinearLayout>
    </FrameLayout>
</RelativeLayout>
