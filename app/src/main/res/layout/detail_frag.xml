<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/detailss_frag"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true"
            android:padding="10dp"
            android:id="@+id/detail_frag_head"
            android:background="@color/colorPrimaryDark"
            android:elevation="1dp">

            <LinearLayout
                android:id="@+id/order_layout_frag"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_marginLeft="10dp"
                android:orientation="vertical"
                android:elevation="1dp"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:textSize="18sp"
                    android:gravity="center"
                    android:id="@+id/order_no_frag" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/colorPrimaryDark"
                    android:alpha="0.5"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:textSize="18sp"
                    android:gravity="center"
                    android:id="@+id/opp_order_no_frag" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:id="@+id/linear_text_frag"
                android:orientation="vertical"
                android:layout_marginLeft="20dp"
                android:layout_gravity="center_vertical"
                android:paddingLeft="10dp"
                android:paddingRight="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:textSize="14sp"
                    android:textColor="@color/uber_white"
                    android:id="@+id/stop_name_frag"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:textSize="12sp"
                    android:textColor="@color/uber_white"
                    android:id="@+id/route_no_frag"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:orientation="vertical">

                    <TextView
                        android:paddingTop="4dp"
                        android:paddingBottom="4dp"
                        android:layout_margin="2dp"
                        android:paddingLeft="8dp"
                        android:paddingRight="8dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:gravity="center"
                        android:layout_gravity="center_horizontal"
                        android:textColor="@color/uber_white"
                        android:text="\u20B9"
                        android:id="@+id/pay_trip_symbol"/>
                <android.support.v7.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:layout_gravity="center_horizontal">
                    <TextView
                        android:paddingTop="4dp"
                        android:background="@color/uber_white"
                        android:paddingBottom="4dp"
                        android:paddingLeft="8dp"
                        android:paddingRight="8dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:gravity="center"
                        android:textColor="@color/colorPrimaryDark"
                        android:text="Buy"
                        android:id="@+id/pay_trip"/>
                </android.support.v7.widget.CardView>

                </LinearLayout>

        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/ic_metro_front_on_rail_outlined_transport_symbol"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center"
            android:background="#CFD8DC"
            android:elevation="1dp"
            android:padding="2dp"
            android:id="@+id/time1"
            android:textSize="14sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center"
            android:background="#CFD8DC"
            android:elevation="1dp"
            android:padding="2dp"
            android:id="@+id/time2"
            android:textSize="14sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:background="#CFD8DC"
            android:elevation="1dp"
            android:padding="2dp"
            android:layout_gravity="center"
            android:id="@+id/time3"
            android:textSize="14sp"/>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="0dp"
        android:paddingBottom="10dp"
        android:paddingRight="10dp"
        android:paddingLeft="10dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:src="@drawable/ic_metro_front_on_rail_outlined_transport_symbol"
                android:visibility="invisible"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:elevation="1dp"
                android:layout_gravity="center"
                android:background="#CFD8DC"
                android:padding="2dp"
                android:id="@+id/otime3"
                android:textSize="14sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:elevation="1dp"
                android:layout_gravity="center"
                android:background="#CFD8DC"
                android:padding="2dp"
                android:id="@+id/otime2"
                android:textSize="14sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:elevation="1dp"
                android:layout_marginLeft="10dp"
                android:background="#CFD8DC"
                android:padding="2dp"
                android:layout_gravity="center"
                android:id="@+id/otime1"
                android:textSize="14sp"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:src="@drawable/ic_metro_front_on_rail_outlined_transport_symbol"/>
        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/colorPrimary"
        android:layout_marginLeft="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="4dp"
            android:textSize="16sp"
            android:id="@+id/notificat_text"
            android:text="Turn on notification for this route"/>
    <vn.luongvo.widget.iosswitchview.SwitchView
        android:id="@+id/switchview_notificat"
        android:layout_width="50dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="4dp"
        android:layout_height="30dp"
        android:layout_marginBottom="10dp"
        app:checked="false"
        app:color_off="@color/colorPrimaryLight"
        app:color_on="@color/colorPrimaryDark" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/colorPrimary"
        android:layout_marginLeft="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="4dp"
        android:textSize="16sp"
        android:id="@+id/fav_text"
        android:text="Add to favorites"/>
    <vn.luongvo.widget.iosswitchview.SwitchView
        android:id="@+id/switchview_fav"
        android:layout_width="50dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="4dp"
        android:layout_height="30dp"
        android:layout_marginBottom="10dp"
        app:checked="false"
        app:color_off="@color/colorPrimaryLight"
        app:color_on="@color/colorPrimaryDark" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/colorPrimary"
        android:layout_marginLeft="20dp" />



</LinearLayout>